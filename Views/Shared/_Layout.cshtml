
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Admin/ad.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
   

   

</head>
<body>

    <div class="admin-container"> 
    <!-- Sidebar -->
     <div class="sidebar">
        <div class="sidebar-header">
            <div class="admin-title">
                    <img src ="~/Admin/admin.jpg" alt="Admin" class="admin-avatar">
                <h2>SANA'A</h2>
            </div>
            <p>Abdullah Omar</p>
            <p>Administrator</p>
        </div>

            @{
                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
            }

            <div class="sidebar-menu">
                <a class="menu-item @(currentAction == "Dashboard" ? "active" : "")" asp-controller="Admin" asp-action="Dashboard">
                    <i class="fas fa-chart-line"></i>
                    <span>Statistics</span>
                </a>
                <a class="menu-item @(currentAction == "Verification" ? "active" : "")" asp-controller="Admin" asp-action="Verification">
                    <i class="fas fa-user-check"></i>
                    <span>Verify Accounts</span>
                </a>
                <a class="menu-item @(currentAction == "ManageReports" ? "active" : "")" asp-controller="Admin" asp-action="ManageReports">
                    <i class="fas fa-flag"></i>
                    <span>Manage Reports</span>
                </a>
            </div>
      </div>
  </div>


    <div class="container" style="margin-left:30%; padding-top:3%">
        @RenderBody()
      </div>

</body>
</html>
