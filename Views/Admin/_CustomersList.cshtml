@model List<GradFinalProject.Models.Customer>

<div id="customersTableContainer" class="card neumorphic p-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Customer List</h3>
        <button onclick="hideCustomersTable()" class="btn btn-danger btn-sm">
            <i class="fas fa-times"></i> Close
        </button>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>City</th>
                    <th>Is Freelancer</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].FirstName @Model[i].LastName</td>
                        <td>@Model[i].Email</td>
                        <td>@Model[i].PhoneNumber</td>
                        <td>@Model[i].City</td>
                        <td>@(Model[i].IsFreelancer ? "Yes" : "No")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>

    </script>
</div>
