@model IEnumerable<GradFinalProject.Models.Service>

<table class="table table-bordered mt-4">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Category</th>
            <th>Freelancer</th>
            <th>Price</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Id</td>
                <td>@service.Title</td>
                <td>@service.Category?.CategoryName</td>
                <td>@service.Freelancer?.Customer?.FirstName @service.Freelancer?.Customer?.LastName</td>
                <td>@service.Price.ToString("C")</td>
                <td>@(service.IsActive ? "Active" : "Inactive")</td>
            </tr>
        }
    </tbody>
</table>
